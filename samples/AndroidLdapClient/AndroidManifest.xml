<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.unboundid.android.ldap.client"
          android:versionCode="2"
          android:versionName="1.1"
          android:installLocation="auto">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.READ_CONTACTS" />
  <uses-permission android:name="android.permission.WRITE_CONTACTS" />

  <application android:icon="@drawable/icon"
               android:label="@string/app_name">

    <activity android:name=".LDAPClient"
              android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".AddServer"
              android:label="@string/activity_label" />

    <activity android:name=".EditServer"
              android:label="@string/activity_label" />

    <activity android:name=".EMailAddressOptions"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".GenericAttributeOptions"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".HeaderOptions"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".ListSearchResults"
              android:label="@string/activity_label" />

    <activity android:name=".ListSearchResultsOptions"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".ListServerOptions"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".PhoneNumberOptions"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".PopUp"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".PostalAddressOptions"
              android:label="@string/activity_label"
              android:theme="@android:style/Theme.Dialog" />

    <activity android:name=".SearchServer"
              android:label="@string/empty_string" />

    <activity android:name=".ViewEntry"
              android:label="@string/activity_label" />

    <activity android:name=".ViewLDIF"
              android:label="@string/activity_label" />

  </application>

  <uses-sdk android:minSdkVersion="8" />

  <supports-screens android:smallScreens="true"
                    android:normalScreens="true"
                    android:largeScreens="true"
                    android:anyDensity="true" />

</manifest>
